---
import "../custom-pico.css"
import ComingSoon from "../components/ComingSoon.astro"
import PageLayout from "../layouts/PageLayout.astro"

const pathname = Astro.url.pathname;
const validPaths = ["Conference", "Chapters", "Sponsors", "Collaborators", "Speakers", "Volunteers", "Contact-Us", "Privacy-Policy"]
let title = "404 Error"
let subtitle = "Page Not Found"
for (const path of validPaths) {
  if (pathname.slice(1) == path.toLowerCase()){
    title = path + " page coming soon"
    subtitle = pathname + " is currently under construction. Stay tuned for updates!"
    break 
  }
}
---

<PageLayout title={title}  sparklesTop={false}>
  <ComingSoon title={title} subtitle={subtitle}/>
</PageLayout>