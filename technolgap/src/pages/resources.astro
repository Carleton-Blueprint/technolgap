---
import PageLayout from "../layouts/PageLayout.astro";
import TextBox from "../components/TextBox.astro";
import Subheading from "../components/Subheading.astro";
---

<PageLayout title="Resources" sparklesTop={false} sparklesBottom={true}>
  <div id="resources" >
    <Subheading title="Resources" />
    <TextBox
      heading="Discover Technolgap Resources!"
      text="Welcome to our Resources page to explore a curated collection of resources tailored to women and non-binary individuals in tech. Whether you're looking for educational materials, job opportunities, or networking platforms, we've got you covered."
    />

      <a id="link" class="button" href="https://mahogany-verbena-d62.notion.site/e8ce1087385b4314bce51cc1b21d66ad?v=f28da2d7f19143d3aed191f96b236cfa&pvs=74" target="_blank">RESOURCES</a>
      <img id="cursor" alt="cursor icon" src="/cursor.png" />
  </div>
</PageLayout>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const cursor = document.getElementById("cursor");
    const link = document.getElementById("link");
    console.log(link);
    link?.addEventListener("mouseenter", () => {
        if (cursor){
            cursor.style.width = "60px";
        }
    });
    link?.addEventListener("mouseleave", () => {
        if (cursor){
            cursor.style.width = "70px";
        }
    });
  });
</script>

<style>


  #resources {
    min-height: 100vh;
    padding: 1px;
    background-image: linear-gradient(#ffeaf8, #fff);
  }


  #link {
    margin: 0 auto;
    margin-top: 100px;
    max-width: 200px;
  }
  
  
  #cursor {
    display: block;
    margin-left: auto;
    margin-right: auto;
    padding-left: 300px;
    width: 70px;
    margin-top: -20px;
  }

  @media (max-width: 450px) {
    #cursor {
      width: 50px;
      padding-left: 250px;
    }

    #link > a{
      font-size: 22px;
      padding: 20px 40px;
    }
  }
</style>
