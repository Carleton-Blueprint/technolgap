---
import { createClient } from "contentful";
import PageLayout from "../layouts/PageLayout.astro";

const client = createClient({
  space: "33d3d7kdmbg5",
  accessToken: "00BZSByF4Gmh1S-vDtMfsmOLIdqrC8fyV404sOfIwzM",
});

const { upcomingEvents } = await (async () => {
  const response = await client.getEntries({ content_type: "event" });
  return { upcomingEvents: response.items };
})();
---

<style>
  body {
    font-family: Arial, sans-serif;
    background-image: url('/events-page-bg.png');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
    color: #333;
  }

  .container {
    padding: 20px;
    margin: 0 auto;
    max-width: 1200px; 
  }

  .header {
    text-align: center;
    padding: 60px 20px;
    border-radius: 15px;
    margin-bottom: 30px;
    overflow: hidden;
  }

  .header h1 {
    font-size: 48px;
    font-weight: bold;
    color: #0e5647; /* Dark green */
    margin-bottom: 20px;
  }

  .header p {
    font-size: 18px;
    line-height: 1.6;
    color: #fff;
    background-color: #0e5647;
    display: inline-block;
    padding: 15px 30px;
    border-radius: 10px;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
    max-width: 800px;
  }

  /* .filter {
    display: flex;
    justify-content: center;
    margin-bottom: 20px;
  }

  .filter select {
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 5px;
    background-color: #0c5027;
  } */

  .filter select {
  padding: 10px 20px;
  border: none;
  border-radius: 30px;
  background-color: #0c5027;
  color: #fff;
  font-size: 16px;
  font-weight: bold;
  appearance: none;
  -webkit-appearance: none;
  -moz-appearance: none;
  text-align: center;
  cursor: pointer;
  outline: none;
}

.filter {
  position: relative; 
  display: inline-block; 
}

.filter select::placeholder {
  color: #fff; 
}

.filter::after {
  content: 'â–¼';
  font-size: 14px;
  color: #fff;
  position: absolute;
  right: 5px;
  top: 40%;
  transform: translateY(-50%);
  pointer-events: none;
}

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
    padding: 0 20px;
  }

  .card {
    background: rgba(233, 245, 248, 0.9); 
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    padding: 20px;
    text-align: center;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
  }

  .card h2 {
    margin: 10px 0;
    font-size: 20px;
    color: #333;
  }

  .card p {
    margin: 5px 0;
    color: #555;
    font-size: 14px;
  }

  .badge {
    background-color: #d1f2eb;
    color: #00796b;
    border-radius: 5px;
    padding: 5px 10px;
    display: inline-block;
    margin-bottom: 10px;
    font-size: 12px;
  }

  .highlight {
  font-size: 24px;
  font-weight: bold;
  display: block; 
  margin-bottom: 10px; 
}
</style>

<PageLayout title="Events">
  <div class="container">
    <div class="header">
      <h1>Events</h1>
      <p>
        <span class="highlight">Join us at Technolgap events!</span>
        Stay updated on our latest events, workshops, and networking opportunities designed to support and empower women and non-binary individuals in tech. From panel discussions to hackathons, our events are aimed at fostering skill development, career advancement, and community engagement.
      </p>
    </div>

    <div class="filter">
      <select name="year" id="year">
        <option value="" disabled selected>Year</option>
        <option value="2024">2024</option>
        <option value="2023">2023</option>
        <option value="2022">2022</option>
      </select>
    </div>

    <div class="grid">
      {upcomingEvents.map((event) => (
        <div class="card">
          <div class="badge">Series</div>
          <h2>{event.fields.eventName}</h2>
          <p>{event.fields.date ?? "Date not available"}</p>
          <p>{event.fields.time ?? "Time not available"}</p>
          <p>{event.fields.venue ?? "Venue not available"}</p>
        </div>
      ))}
    </div>
  </div>
</PageLayout>
