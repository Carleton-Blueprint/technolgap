---
interface Props {
  eventId: string;
  eventName: string;
  date: string;
  time: string;
  eventType?: string;
}
const { eventId, eventName, date, time, eventType } = Astro.props;
---

<li class="event-card">
  <a href={`/events/${eventId}`} class="event-link">
    <div class="event-image-placeholder"></div>
    <div class="event-card-content">
      <div class="event-card-header">
        <span class="badge">{eventType ?? "Event"}</span>
      </div>
      <h3 class="event-name">{eventName}</h3>
      <div class="event-details">
        <div class="date-container">
            <p class="month">{new Date(date).toLocaleString("en-US", { month: "long" }).toUpperCase()}</p>
            <p class="day">{new Date(date).getDate()}</p>
            <p class="time">@{time}</p>
          </div>
      </div>
    </div>
  </a>
</li>

<style>
  .event-card {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    background-color: #2D6D68;
    ;
    border-radius: 20px;
    padding: 15px;
    width: 300px;
    height: 400px;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .event-link {
    text-decoration: none;
    color: inherit;
  }

  .event-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 20px rgba(0, 0, 0, 0.2);
  }

  .event-image-placeholder {
    background-color: #F7DFEE;
    ;
    height: 180px;
    width: 100%;
    border-radius: 15px;
    margin-bottom: 10px;
    border: 5px solid #ffbce5;
  }

  .event-card-content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
    gap: 10px;
    height: 100%;
  }

  .event-card-header {
    width: 100%;
    display: flex;
    justify-content: flex-start;
    align-items: center;
  }

  .badge {
  text-transform: uppercase; 
  font-weight: bold; 
  font-size: 12px; 
  color: white;
  background-color: #ffbce5; 
  border-radius: 5px; 
  padding: 5px 10px; 
  display: inline-block; 
}

  .event-name {
    font-size: 18px;
    font-weight: bold;
    margin-top: 10px;
    color: white;
  }

  .event-details {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    width: 100%;
  }

  .date-container {
  background-color: #60a0a1; 
  color: white;
  padding: 15px 10px;
  border-radius: 10px; 
  text-align: center; 
  font-family: Arial, sans-serif; 
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  display: inline-block;
  width: 90px; 
  height: 70px;
  margin-top: -20px;
}

.date-container .month {
  font-size: 14px; 
  font-weight: bold; 
  letter-spacing: 1px;
  text-transform: uppercase; 
  margin-bottom: 5px; 
  color: white;
}

.date-container .day {
  font-size: 36px;
  font-weight: bold; 
  margin-bottom: 5px;
  color: white;
}

.date-container .time {
  font-size: 12px;
  font-weight: normal;
  color: white;
}


</style>
