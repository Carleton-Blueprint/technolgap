---
interface Props {
  name: string;
  logo: string;
  website: string;
  contribution: string;
  eventName: string;
  eventId: string;
}

const { name, logo, website, contribution, eventName, eventId } = Astro.props;
---

<article class="card">
  <!-- Front -->
  <section class="card-content">
    <section class="front-card">
      <img src={logo} alt="Headshot photo" class="card-headshot" />
      <h3>{name}</h3>
    </section>

    <!-- Back -->
    <section class="back-card">
      <h5 class="back-text">
        {contribution}
        <br><br>
        {eventName != "none" && (<span class="bio">Check out our event collaboration:<br/><a class="event-link" href={"events/"+eventId}>{eventName}</a></span>)}
        
        {
          website != "none" && (
          <p>
            <a href={website} target="_blank">
              <img
                src="/web-logo-black.png"
                alt="web logo"
                class="card-web-logo"
                onmouseover="this.src='/web-logo-pink.png'"
                onmouseout="this.src='/web-logo-black.png'"
                />
            </a>
          </p>
        )
      }
      </h5>
    </section>
  </section>
</article>


<style>
  .card-headshot {
    margin: 1.2rem;
    height: 13.1rem; /*210px*/
    border-radius: 50%;
    border-width: 5px;
    border-color: white;
    border-style: solid;
  }

  .card-web-logo {
    position: absolute; /* Position the logo absolutely within the .back-card */
    bottom: 15px; /* Distance from the bottom */
    right: 15px; /* Distance from the right */
    height: 45px;
    border-radius: 50%;
  }

  .card-web-logo:hover {
    box-shadow: 0 0 10px 3px #20423f;
  }


  .card {
    background-color: transparent;
    width: 280px;
    height: 375px;
    perspective: 1000px;
    box-shadow: none;
    /* set paading to 0 for no extra space */
  }

  .card-content {
    position: relative;
    /* width: 100%; */
    height: 100%;
    text-align: center;
    transition: transform 0.8s;
    transform-style: preserve-3d;
    background-color: transparent;
    border-radius: 15px;
  }

  .card:hover .card-content {
    transform: rotateY(180deg);
    box-shadow: 2px 7px 7px 2px #424242;
  }
  .front-card {
    background-color: transparent;
    color: white;
    border-style: none;
    border-radius: 15px;
  }

  .back-card,
  .front-card {
    position: absolute;
    /* width: 100%; */
    height: 100%;
    /* -webkit-backface-visibility: hidden; */
    backface-visibility: hidden;
  }

  .back-card {
    transform: rotateY(180deg);
    display: flex;
    flex-direction: column;
    justify-content: center; /* Center vertically */
    align-items: center; /* Center horizontally */

    background-color: #2f605c;
    color: white;
    border-color: #fee8f5;
    border-width: 2px;
    border-style: solid;
    border-radius: 15px;
    box-shadow: 2px 7px 7px 2px #424242;
  }

  .card h3,
  h5,
  p {
    color: white;
    font-size: 17px;
  }

  .bio {
    font-weight: 400;
  }
  
  .back-text {
    padding: 15px;
    white-space: 'pre-line';
  }

  .event-link{
    display: block;
    font-size: 20px;
    font-weight: 700;
    color: #ffbce5;
    text-decoration-color: #ffbce5;
  }

  .event-link:hover{
    color: #fee8f5;
    text-decoration-color: #fee8f5;
  }
  
</style>
