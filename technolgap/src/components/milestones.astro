---
// src/components/milestones.astro
import { createClient } from "contentful";
import Subheading from "./Subheading.astro";

const client = createClient({
  space: "33d3d7kdmbg5",
  accessToken: "00BZSByF4Gmh1S-vDtMfsmOLIdqrC8fyV404sOfIwzM",
});

// Fetch milestones from Contentful
const response = await client.getEntries({
  content_type: "milestone",
  order: ["fields.year"], // Order milestones by year
});
const milestones = response.items;
---

<section id="about-us">
  <Subheading title="Milestones at Technolgap" />
  <section id="milestones">
    <div class="timeline">
      {
        milestones.map((milestone) => (
          <div class="milestone">
            <div class="circle">
              <h4>{milestone.fields.year}</h4>
              <p>{milestone.fields.description}</p>
            </div>
          </div>
        ))
      }
    </div>
  </section>
</section>

<style>
  #about-us {
    padding-top: 7rem;
    padding-bottom: 6rem;
    background: linear-gradient(#fef8fc,#f7d7ea);
    margin-bottom: 0;
    border: none;
    border-radius: 0;
    text-align: center;
  }

  #milestones {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .timeline {
    display: grid;
    gap: 2rem;
    justify-items: center;
    position: relative;
    width: 80%;
    max-width: 600px;
  }
  .milestone {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
  }
  .circle {
    background-color: #2f605c; /* Green color for circles */
    background: linear-gradient(135deg, #2f605c, #64a8a2dd);
    color: white;
    width: 300px;
    height: 300px;
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 1rem;
  }
  .circle h4 {
    margin-top: 2rem;
    color: white;
    font-weight: bold;
    text-shadow: 0px 2px 2px #353535;
    font-size: 2rem;
  }
  .circle p {
    color: white;
    font-weight: bold;
    text-shadow: 0px 2px 2px #353535;
    font-size: 1rem;
  }
  .milestone::before {
    content: "";
    position: absolute;
    top: -2rem;
    left: 50%;
    transform: translateX(-50%);
    width: 8px;
    height: 2rem;
    background-color: #ffbce5; /* Pink connecting line */
  }
  /* .milestone:first-of-type::before {
    display: none; /* No line above the first item
  } */
</style>
