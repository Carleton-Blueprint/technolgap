---
import whiteStar from "../../public/white-star.png";
import pinkStar from "../../public/pink-star.png";
import bigPinkStar from "../../public/bigPink-star.png";
import bigWhiteStar from "../../public/bigWhite-star.png";
import CoreValueCard from "../components/CoreValueCard.astro";
import Subheading from "../components/Subheading.astro"

interface Props {
    title: string;
	subtitle1: string;
	body1: string;
    subtitle2: string;
	body2: string;
    subtitle3: string;
	body3: string;
}

const { title, subtitle1, body1, subtitle2, body2, subtitle3, body3 } = Astro.props;
---

<article class="core-values">
    <img src={whiteStar.src} alt="White Star Design" class="white-star-top">
    <img src={pinkStar.src} alt="Pink Star Design" class="pink-star-top">
    <Subheading title={title}/>
    <ul role="list" class="value-card-grid">
        <CoreValueCard
            title={subtitle1}
            body={body1}
        />
        <CoreValueCard
            title={subtitle2}
            body={body2}
        />
        <CoreValueCard
            title={subtitle3}
            body={body3}
        />
    </ul>
    <img src={whiteStar.src} alt="White Star Design" class="white-star-bottom">
    <img src={whiteStar.src} alt="White Star Design" class="white-star-milestones">
    <img src={pinkStar.src} alt="Pink Star Design" class="pink-star-bottom">
    <img src={bigPinkStar.src} alt="Big Pink Star Design" class="bigPink-star-bottom">
    <img src={bigWhiteStar.src} alt="Big White Star Design" class="bigWhite-star-bottom">
</article>

<style>
    article{
        padding-top: 7rem;
        padding-bottom: 6rem;
        background: linear-gradient(#f7d7ea, #fef8fc);
        margin-bottom: 0;
        border: none;
        border-radius: 0;
        text-align: center;
    }

    .value-card-grid {
		margin: 0 10vw;
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}

    .core-values .white-star-top {
        position: absolute;
        width: 113.48px;
        height: 119.42px;
        top: 2150px;
        left: 135px;
        z-index: 0;
    }

    .core-values .pink-star-top {
        position: absolute;
        width: 155.48px;
        height: 175.42px;
        top: 2155px;
        left: 30px;
        z-index: 0;
    }

    .core-values .pink-star-bottom {
        position: absolute;
        width: 113.48px;
        height: 119.42px;
        top: 2500px;
        right: 150px;
        z-index: 0;
    }

    .core-values .white-star-bottom {
        position: absolute;
        width: 155.48px;
        height: 185.42px;
        top: 2550px;
        right: 50px;
        z-index: 0;
    }

    .core-values .white-star-milestones {
        position: absolute;
        width: 70px;
        height: 70px;
        top: 2860px;
        right: 686.5px;
        z-index: 0;
    }

    .core-values .bigPink-star-bottom{
        position: absolute;
        top: 3800px;
        right: 0px;
    }

    .core-values .bigWhite-star-bottom{
        position: absolute;
        top: 3000px;
        left: 0px;
    }
</style>