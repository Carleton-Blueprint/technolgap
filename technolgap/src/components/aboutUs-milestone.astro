---
// src/components/aboutUs.astro
import Milestones from "./Milestones.astro";

---
<section id="about-us">
    <h2>About Us</h2>
    
    <!-- Milestones Section -->
    <Milestones />
</section>

<style>
    #about-us {
        padding: 2rem;
        text-align: center;
        background: linear-gradient(to bottom, white, #ffebf5, #ffe0f0);
    }
    h2 {
        font-size: 2rem;
        margin-bottom: 1rem;
        color: #2D6D68DD;
        font-weight: bold; /* Makes the text bold */
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3); /* Adds a shadow */
    }
    p {
        font-size: 1.2rem;
        margin-bottom: 2rem;
    }
</style>
