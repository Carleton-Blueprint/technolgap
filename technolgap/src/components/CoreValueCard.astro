---
interface Props {
	title: string;
    body: string;
}
const { title, body } = Astro.props;
---


<li class="value-card">
    <div class="card">
        <h3>
            {title}
        </h3>
        <p>
            {body}
        </p>
    </div>
</li>

<style>
    .value-card {
        display: flex;
		background-color: #2f605c;
		transition: background-color 0.5s;
		border-radius: 90px;
        border-color: #fbf6ef;
        border-width: 7px;
        border-style: solid;
        box-shadow: 0 4px 2px #2f605c;
        transition: transform 0.5s ease;
    }
    
    .value-card:hover {
        box-shadow: 10px 10px 0 0 #2f605c;
        transform: translateY(-7px);
    }

    .card {
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
        padding-bottom: 3rem;
	}

    h3 {
        margin-top: 2rem;
        color: white;
        font-weight: bold;
        text-shadow: 0px 2px 2px #353535;
    }

    p {
		margin-top: 3rem;
		margin-bottom: 0;
		color: #fbf6ef;
	}

    @media (max-width: 1200px) {
        p {
            font-size: 14px;
        }
    }

    @media (max-width: 800px) {
        p {
		    margin-top: 1rem;
	    }
        h3 {
            margin-top: 1rem;
            font-size: 18px;
        }
    }
</style>
